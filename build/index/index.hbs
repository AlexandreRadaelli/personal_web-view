    <meta charset="UTF-8">
    <title>Davide Radaelli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{tldr.desc}}">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&amp;family=Roboto:ital,wght@0,400;0,600;1,400;1,700&amp;display=swap"
        rel="stylesheet">
