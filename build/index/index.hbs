<body>
    <main>
        <div class="tldr">
            <img src="./images/davideradaelli.jpg" alt="Davide Radaelli">
            <p>{{tldr.desc}}</p>
            <p>{{tldr.looking}}</p>
            <p>Github: <a href="https://github.com/MoreTacos">@MoreTacos</a></p>
            <p>YouTube: <a href="https://www.youtube.com/channel/UCVkG6KAVgKeFphUReLiD2iQ">@DavideRadaelli</a></p>
            <p>daviderady AT gmail DOT com</p>
        </div>
        <div class="now">
            <h1>Davide Radaelli | Now</h1>
            {{#each now as |n| ~}}
                <p><a href="{{n.link}}">{{n.high}}</a> {{n.desc}}</p>
            {{/each}}
            <h2>Where I've worked</h2>
            <ul>
                {{#each work as |w| ~}}
                    <li>
                        <b>{{w.name}}</b> <i>- {{w.tldr}}</i>
                        <p>{{w.desc}}</p>
                    </li>
                {{/each}}
            </ul>
            <h2>Things I've done</h2>
            <ul>
                {{#each done as |d| ~}}
                    <li><a href="{{d.link}}">{{d.high}}</a> {{d.desc}}</li>
                {{/each}}
            </ul>
        </div>
    </main>
    <nav>
        <ul>
            <li><a href="./index.html">Home</a></li>
            <li><a href="./blog.html">Blog</a></li>
            <li><a href="./resume.html">Resume</a></li>
